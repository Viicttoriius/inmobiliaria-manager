{
  "name": "inmobiliaria-manager",
  "version": "3.0.7",
  "description": "Sistema de Gestión Inmobiliaria con Automatización",
  "main": "electron/main.js",
  "author": "Victor Muñoz Lopez",
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev --prefix frontend\" \"npm run dev --prefix backend\"",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev --prefix frontend\" \"npm run dev --prefix backend\" \"wait-on http://localhost:5173 && electron .\"",
    "prebuild": "npm install --prefix frontend && npm run build --prefix frontend && npm install --prefix backend",
    "dist": "electron-builder",
    "release": "electron-builder --publish always",
    "rebuild-backend": "electron-rebuild --module-dir backend -f -w better-sqlite3",
    "rebuild-backend:x64": "electron-rebuild --module-dir backend -f -w better-sqlite3 --arch x64",
    "rebuild-backend:arm64": "electron-rebuild --module-dir backend -f -w better-sqlite3 --arch arm64",
    "postinstall": "electron-builder install-app-deps && npm run rebuild-backend"
  },
  "build": {
    "appId": "com.victormunoz.inmobiliaria",
    "productName": "Inmobiliaria Manager",
    "copyright": "Copyright © 2025 Victor Muñoz Lopez",
    "beforePack": "scripts/beforePack.js",
    "afterPack": "scripts/afterPack.js",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json",
      "electron/assets/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/node-notifier/**/*",
      "**/node_modules/puppeteer/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/python_env",
        "to": "backend/python_env"
      },
      {
        "from": "backend/.cache",
        "to": "backend/.cache"
      },
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/.cache",
          "!test",
          "!tests",
          "!.wwebjs_auth",
          "!.wwebjs_cache",
          "!python_env"
        ]
      },
      {
        "from": "driver",
        "to": "driver"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "legalTrademarks": "Victor Muñoz",
      "signAndEditExecutable": false
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.13",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "darkModeSupport": true,
      "entitlements": null,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "No se requiere acceso al micrófono",
        "NSCameraUsageDescription": "No se requiere acceso a la cámara"
      },
      "mergeASARs": false 
    },

    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage",
      "category": "Office",
      "executableName": "inmobiliaria-manager",
      "artifactName": "${productName}-${version}-linux.${ext}",
      "synopsis": "Sistema de Gestión Inmobiliaria",
      "description": "Gestión de propiedades y clientes con automatización."
    },
    "nsis": {
      "guid": "5f6a9b3c-8d2e-4f1a-9c0b-7e6d5f4a3b2c",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerLanguages": [
        "es_ES"
      ],
      "multiLanguageInstaller": true,
      "displayLanguageSelector": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "shortcutName": "Inmobiliaria Manager",
      "include": "build/installer.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "license": "LICENSE"
    },
    "publish": {
      "provider": "github",
      "owner": "Viicttoriius",
      "repo": "inmobiliaria-manager",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "33.2.1",
    "electron-builder": "^24.9.1",
    "rcedit": "^5.0.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@sentry/electron": "^7.5.0",
    "electron-updater": "^6.1.7"
  }
}